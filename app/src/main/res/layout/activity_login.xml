<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controller.LoginActivity" android:background="@color/colorPrimary">

    <EditText
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/loginNameTxt"
            android:hint="name"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:textColor="@android:color/background_dark"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="120dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/loginPasswordTxt"
            android:hint="password"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/loginNameTxt" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:textColor="@android:color/background_dark"/>
    <Button
            android:text="Login"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/loginBtn"
            android:textSize="20sp" android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark" android:onClick="loginBtnClicked"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/loginPasswordTxt"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:layout_marginEnd="24dp"/>
</android.support.constraint.ConstraintLayout>